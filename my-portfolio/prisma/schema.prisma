generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Work {
  id Int @id @default(autoincrement())
  icon String
  title String
  description String @db.Text
  techStack String
  collaboTools String
  link String
  screenShots Screenshot[]
}

model Screenshot {
  id Int @id @default(autoincrement())
  workId Int
  type String
  url String
  order Int
  work Work @relation(fields: [workId], references: [id], onDelete: Cascade)
}